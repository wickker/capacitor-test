{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "rootDirs": ["runtime", "lib"],
    "target": "es6",
    "baseUrl": "./"
  },
  "include": ["**/*.js", "index.d.ts"],
  "exclude": [
    "**/node_modules/*",
    "**/*.spec.ts",
    "test",
    "**/tmp/*",
    "example",
    "**/dist/*",
    "**/.history/*"
  ]
}
